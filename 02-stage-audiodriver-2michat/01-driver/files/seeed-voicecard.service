[Unit]
Description=Seeed Voicecard service
After=user@1000.service sound.target alsa-restore.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStartPre=/bin/bash -c 'while [ ! -S /run/user/1000/pipewire-0 ]; do sleep 0.1; done'
ExecStart=/usr/bin/seeed-voicecard-v2
User=root
 
[Install]
WantedBy=multi-user.target
