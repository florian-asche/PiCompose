[Unit]
Description=PiCompose - Configure Audio volume setting
After=user@1000.service sound.target alsa-restore.service

[Service]
Type=oneshot
ExecStartPre=/bin/bash -c 'while [ ! -S /run/user/1000/pipewire-0 ]; do sleep 0.1; done'
ExecStart=/usr/bin/configure_audio.sh
RemainAfterExit=yes
Restart=on-failure
RestartSec=30s

[Install]
WantedBy=multi-user.target
